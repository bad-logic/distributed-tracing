FROM golang:1.22-bullseye

# for hot reloading development purpose only
# uncomment for development only
RUN go install github.com/air-verse/air@v1.52.3


WORKDIR /usr/app
COPY go.mod go.sum ./
RUN go mod download

COPY . .

# uncomment for development mode only
CMD [ "air" ]

