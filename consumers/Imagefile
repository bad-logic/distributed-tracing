# FROM conanio/clang14-ubuntu16.04 AS FirstPhase
FROM conanio/gcc11-ubuntu16.04 AS BuilderStage

WORKDIR /usr/app

COPY conanfile.txt .

# install dependencies
RUN conan install . --build=missing

# copy required files
COPY CMakeLists.txt .
COPY entry.sh .
COPY ./src ./src
COPY ./configs ./configs
RUN cmake . -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=Release
RUN cmake --build . 
# the above command will spit out executable in bin folder
# name of the executable is defined inside CMakeLists.txt
CMD ["./bin/consumer"]



